<VirtualHost *:80>
    ServerName <%= @server_name %>
    ServerAlias <%= @server_alias %>
    ServerAdmin admin@example.com
    DocumentRoot "<%= @document_root %>"
    DirectoryIndex index.php Index.html
    CustomLog "<%= @log_dir %>/access_log" combined
    ErrorLog "<%= @log_dir %>/error_log"
    ErrorDocument 404 /error/HTTP_NOT_FOUND.html.var
    LogLevel warn

    # Set Flow context
    SetEnv FLOW_CONTEXT <%= node['site-builddocstypo3org']['app']['context'] %>
    SetEnv FLOW_ROOTPATH <%= node['site-builddocstypo3org']['app']['home'] %>/releases/current/
    SetEnv FLOW_REWRITEURLS 1

    <Directory "<%= @document_root %>">
        RedirectMatch permanent ^/login /typo3
        AllowOverride All
        <IfModule mod_dav.c>
            DAV Off
        </IfModule>
        Options All -Includes -ExecCGI +MultiViews -Indexes
        CheckSpelling On
        CheckCaseOnly On
    </Directory>
    <IfModule mod_rewrite.c>
        RewriteEngine On
        RewriteCond %{REQUEST_METHOD} ^TRACE
        RewriteRule .* - [F]
        #RewriteCond %{HTTP_HOST} ^<%= @server_name %> [NC]
        #RewriteRule ^(.*)$ http://www.%{HTTP_HOST}$1 [R=301,L]
    </IfModule>
</VirtualHost>
